{
  "pebble": {
    "listen": {
      "host": "localhost",
      "port": 3004
    },
    "enabled": ["twitter", "irc"]
  },
  "redis": {
    "host":       "localhost",
    "namespace":  "pebble",
    "password":   "something",
    "port":       6379,
    "maxHistory": 10
  },
  "twitter": {
    "consumer": {
      "key":    "your-consumer-key",
      "secret": "your-consumer-secret"
    },
    "access_token": {
      "key":    "oauth-key-goes-here",
      "secret": "oauth-secret-goes-here"
    },
    "track":    ["a", "b", "c"]
  },
  "irc": {
    "server":   "irc.freenode.net",
    "user":     "pebble",
    "channels": ["#railsrumble"]
  }
}